<openerp>

    <data noupdate="1">

        <record model="ir.module.category" id="module_category_cmms_management">
            <field name="name">CMMS</field>
            <field name="sequence">16</field>
            <field name="description">Track maintenance on equipment</field>
        </record>

        <record id="group_cmms_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_cmms_management"/>
            <field name="comment">User will have access to the basic CMMS application.</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_cmms_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">User will have access to CMMS configuration.</field>
            <field name="category_id" ref="module_category_cmms_management"/>
            <field name="implied_ids" eval="[(4, ref('group_cmms_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

    </data>

</openerp>
