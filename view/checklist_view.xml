<openerp>
    <data>

     <!--
     =======================
     checklist configuration
     =======================
     -->

        <record model="ir.ui.view" id="view_checklist_tree">
            <field name="name">cmms.checklist.tree</field>
            <field name="model">cmms.checklist</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Checklist">
                    <field name="name" colspan="2"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_checklist_form">
            <field name="name">cmms.checklist.form</field>
            <field name="model">cmms.checklist</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Question">
                    <field name="name" />
                    <field name="questions_ids" colspan="4" nolabel="1">
                        <tree>
                            <field name="name" nolabel="1"/>
                        </tree>
                        <form>
                            <field name="name" nolabel="1"/>
                        </form>
                    </field>
                </form>
            </field>
        </record>
        
        <record id="cmms_checklist_action_new" model="ir.actions.act_window">
            <field name="name">New Checklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmms.checklist</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>
        
        <record id="cmms_checklist_action_all" model="ir.actions.act_window">
            <field name="name">All Checklists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmms.checklist</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

     <!--
        ==========
        checklists
        ==========
        -->

         <record model="ir.ui.view" id="view_checklist_history_tree">
            <field name="name">cmms.checklist.history.tree</field>
            <field name="model">cmms.checklist.history</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Checklist"  colors="red:date_planned&lt;=current_date and status=='draft';orange:date_planned&lt;=current_date and status=='confirmed'">
                    <field name="name" />
                    <field name="checklist_id" />
                    <field name="user_id" />
                    <field name="date_planned"/>
                    <field name="date_end"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_checklist_history_form">
            <field name="name">cmms.checklist.history.form</field>
            <field name="model">cmms.checklist.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Questions">
                    <group colspan="4" col="6">
                        <group colspan="4" col="2">
                            <field name="name" />
                            <field name="equipment_id"/>
                            <field name="checklist_id" on_change="onchange_checklist_id(checklist_id)" />
                            <field name="user_id" options="{'create':False, 'create_edit':False, 'limit':15}"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="date_planned"/>
                            <field name="date_end"/>
                            <field name="status"/>
                        </group> 
                    </group>
                    <separator colspan="4"/>
                    <separator string="Questions" colspan="4"/>
                    <field name="answers_ids" colspan="4" nolabel="1">
                        <tree string="Answers">
                            <field name="name"/>
                            <field name="answer"/>
                            <field name="detail"/>
                        </tree>
                        <form string="Answers">
                            <field name="name" colspan="4"/>
                            <field name="answer" colspan="4"/>
                            <field name="detail" colspan="4"/>
                        </form>
                    </field>
                </form>
            </field>
        </record>

        <record id="cmms_checklist_history_action_all" model="ir.actions.act_window">
            <field name="name">All Checklists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmms.checklist.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    
        <record id="cmms_checklist_history_action_new" model="ir.actions.act_window">
            <field name="name">Fill a Checklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmms.checklist.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>

     <menuitem 
        id="menu_cmms_checklist_history" 
        name="Checklists" 
        parent="cmms.menu_cmms_main"
        sequence="60"
        />

            
    <menuitem 
        id="menu_cmms_checklist_all" 
        name="All Checklists"  
        action="cmms_checklist_action_all"  
        parent="menu_cmms_checklist_history"
        sequence="10"
        />
            
    <menuitem 
        id="menu_cmms_checklist_history_all"
        name="Checklists Follow-up"  
        action="cmms_checklist_history_action_all"  
        parent="menu_cmms_checklist_history"
        sequence="20"
        />

    <menuitem 
        id="menu_cmms_checklist_history_new" 
        name="Fill a Checklist"  
        action="cmms_checklist_history_action_new"  
        parent="menu_cmms_checklist_history"
        sequence="30"
        />

    </data>
</openerp>
