<openerp>
    <data>

        <!-- 
        ========== 
        CM 
        ========== 
        -->

        <record id="view_cm_form" model="ir.ui.view">
            <field name="name">cmms.cm.form</field>
            <field name="model">cmms.cm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="CM">
                    <field name="equipment_id"/>
                    <field name="name" placeholder="unique id will be generated if blank"/>
                    <field name="failure_id"/>
                    <field name="date"/>
                    <field name="user_id" options="{'create':False, 'create_edit':False, 'limit':15}"/>
                    <field colspan="4" name="diagnosistab_ids" nolabel="1">
                        <form string="Diagnosis Table">
                            <group colspan="4">
                                <field name="name" colspan="4"/>
                                <label string="Solution" colspan="4"/>
                                <field name="solution" colspan="4" nolabel="1"/>
                            </group>
                        </form>
                        <tree string="Diagnosis Table">
                            <field name="name"/>
                            <field name="solution"/>
                        </tree>
                    </field>
                    <notebook colspan="4">
                        <page string="Follow-up History">
                            <field colspan="4" name="archiving_ids" nolabel="1">
                                <form string="Follow-up history">
                                    <field name="name" colspan="4"/>
                                    <field name="date"/>
                                    <label string="Description"/>
                                    <field name="description" nolabel="1" colspan="4"/>
                                </form>
                                <tree string="Follow-up history">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <separator string="Notes" colspan="4" />
                    <field colspan="4" nolabel="1" name="note" />
                </form>
            </field>
        </record>

        <record id="view_cm_tree" model="ir.ui.view">
            <field name="name">cmms.cm.tree</field>
            <field name="model">cmms.cm</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="CM">
                    <field name="name" />
                    <field name="equipment_id" />
                    <field name="failure_id" />
                    <field name="date" />
                </tree>
            </field>
        </record>

        <record id="open_view_cm_list_my" model="ir.actions.act_window">
            <field name="name">Corrective Maintenance</field>
            <field name="res_model">cmms.cm</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            action="open_view_cm_list_my" 
            id="menu_open_view_cm_list_my"
            parent="cmms.menu_cmms_main"
            sequence="40"
            />

        <record id="open_view_cm_new" model="ir.actions.act_window">
            <field name="name">New CM</field>
            <field name="res_model">cmms.cm</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>

        ======== 
        Failures
        ======== 

        <record id="view_failure_form" model="ir.ui.view">
            <field name="name">cmms.failure.form</field>
            <field name="model">cmms.failure</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Failure">
                    <field name="name" colspan="1"/>
                    <field name="code" colspan="1" placeholder="unique id will be generated if blank"/>
                    <field name="description" colspan="4" />
                </form>
            </field>
        </record>

        <record id="view_failure_tree" model="ir.ui.view">
            <field name="name">cmms.failure.tree</field>
            <field name="model">cmms.failure</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Failure">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="open_view_failure_new" model="ir.actions.act_window">
            <field name="name">Failures</field>
            <field name="res_model">cmms.failure</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>

    </data>
</openerp>
