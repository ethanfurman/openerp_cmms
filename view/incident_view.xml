<openerp>
    <data>

        <!-- 
        ==========
        Incident
        ========== 
        -->

        <record id="cmms_incident_tree-view" model="ir.ui.view">
            <field name="name">cmms.incident.tree</field>
            <field name="model">cmms.incident</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Incident">
                    <field name="reference"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="priority"/>
                    <field name="equipment_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="cmms_incident-view" model="ir.ui.view">
            <field name="name">cmms.incident.form</field>
            <field name="model">cmms.incident</field>
            <field name="arch" type="xml">
                <form string="Incident" version="7.0">
                    <sheet string="Incident">
                        <group>
                            <group>
                                <separator string="Incident description" colspan="4"/>
                                <field name="reference" placeholder="unique id will be generated if blank"/>
                                <field name="date"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <separator string="Incident state" colspan="2"/>
                                <field name="user_id"/>
                                <field name="state"/>
                                <field name="active"/>
                            </group>
                            <group colspan="4" col="6">
                                <separator colspan="6" string="References"/>
                                <field name="ref" colspan="4" on_change="onchange_ref_id(ref)"/>
                                <separator colspan="2"/>
                            </group>
                        </group>
                        <newline/>
                        <notebook colspan="4">
                            <page string="General">
                                <field name="equipment_id" colspan="2"/>
                                <separator colspan="2"/>
                            </page>
                            <page string="History">
                                <field colspan="4" name="archiving3_ids" nolabel="1">
                                    <form string="Follow-up history">
                                        <field name="name" colspan="4"/>
                                        <field name="user_id"/>
                                        <field name="date"/>
                                        <label string="Description"/>
                                        <field name="description" nolabel="1" colspan="4"/>
                                    </form>
                                    <tree string="Follow-up history">
                                        <field name="name"/>
                                        <field name="user_id"/>
                                        <field name="date"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this work order to automatically track associated events." groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="search_incident_filter" model="ir.ui.view">
            <field name="name">cmms.incident.select</field>
            <field name="model">cmms.incident</field>
            <field name="arch" type="xml">
                <search string="Search Work Orders">
                    <field name="reference" string="Reference" filter_domain="[(1,'=',1)]"/>
                    <field name="state" string="Status" filter_domain="[(1,'=',1)]"/>
                    <field name="user_id" string="Assigned To" filter_domain="[(1,'=',1)]"/>
                    <field name="equipment_id" string="Machine" filter_domain="[(1,'=',1)]"/>
                    <separator/>
                    <filter string="My Work Orders" name="type_owner" domain="[('user_id','=',uid)]" help="Work orders assigned to me"/>
                    <filter string="Unassigned Work Orders" name="type_unassigned" domain="[('user_id','=',False)]"/>
                    <filter string="All Work Orders" name="type_all" domain="[(1,'=',1)]"/>
                    <separator/>
                    <filter string="Draft Work Orders" name="type_draft" domain="[('state','=','draft')]"/>
                    <filter string="Open Work Orders" name="type_open" domain="[('state','=','confirmed')]"/>
                    <filter string="Done Work Orders" name="type_done" domain="[('state','=','done')]"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Assigned to" domain="[]" context="{'group_by' : 'user_id'}" />
                        <filter string="Status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Priority" domain="[]" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="cmms_incident_act" model="ir.actions.act_window">
            <field name="name">Work Orders</field>
            <field name="res_model">cmms.incident</field>
            <field name="view_type">form</field>
            <field name="context">{"search_default_type_owner":1}</field>
            <field name="view_id" ref="cmms_incident_tree-view"/>
        </record>

        <menuitem
            action="cmms_incident_act"
            id="menu_cmms_incident_act"
            parent="cmms.menu_cmms_main"
            sequence="50"
            />

    </data>
</openerp>
