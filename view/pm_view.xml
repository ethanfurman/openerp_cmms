<openerp>
    <data>

        <!-- 
        ========== 
        PM 
        ========== 
        -->

        <record id="view_pm_form" model="ir.ui.view">
            <field name="name">cmms.pm.form</field>
            <field name="model">cmms.pm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Properties" version="7.0">
                    <group colspan="4" col="6">
                        <group colspan="4" col="2">
                            <field name="description"/>
                            <field name="equipment_id"/>
                            <field name="reference" placeholder="unique id will be generated if left blank"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="recurrent" />
                            <field name="meter" />
                        </group>
                    </group>
                    <group colspan="4" col="6">
                        <group colspan="2" col="2">
                            <field name="state" />
                            <field name="days_left" />
                            <field name="days_next_due" />
                        </group>
                        <group colspan="2" col="2">
                            <field name="days_last_done" />
                            <field name="days_interval" />
                            <field name="days_warn_period" />
                        </group>
                        <group colspan="2"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Follow-up History">
                            <field colspan="4" name="archiving2_ids" nolabel="1">
                                <form string="Follow-up history">
                                    <field name="name" colspan="4"/>
                                    <field name="date"/>
                                    <label string="Description"/>
                                    <field name="description" nolabel="1" colspan="4"/>
                                </form>
                                <tree string="Follow-up history">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <separator string="Notes" colspan="4" />
                    <field colspan="4" nolabel="1" name="note" />
                </form>
            </field>
        </record>

        <record id="view_pm_tree" model="ir.ui.view">
            <field name="name">cmms.pm.tree</field>
            <field name="model">cmms.pm</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Properties" colors="blue:days_left&lt;=days_warn_period and days_left&gt;0;red:days_left&lt;=0;">
                    <field name="reference"/>
                    <field name="equipment_id"/>
                    <field name="description"/>
                    <!--
                    <field name="days_last_done"/>
                    <field name="days_next_due"/>
                    -->
                    <field name="days_warn_period" attrs="{'invisible': True}"/>
                    <field name="days_left" attrs="{'invisible': True}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="open_view_pm_list_my" model="ir.actions.act_window">
            <field name="name">Preventive Maintenance</field>
            <field name="res_model">cmms.pm</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
            action="open_view_pm_list_my"
            id="menu_open_view_pm_list_my"
            parent="cmms.menu_cmms_main"
            sequence="30"
            />

    </data>
</openerp>
