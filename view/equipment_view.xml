<openerp>
    <data>

        <!-- 
        =========
        Equipment 
        =========
        -->
        <record id="view_equipment_form" model="ir.ui.view">
            <field name="name">cmms.equipment.form</field>
            <field name="model">cmms.equipment</field>
            <field name="arch" type="xml">
                <form string="Equipment" version="7.0">
                    <group colspan="4" col="6">
                        <group colspan="4" col="2">
                            <field name="name" placeholder="unique id will be generated if blank"/>
                            <field name="line_id"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="trademark"/>
                            <field name="model"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="General Information">
                            <group>
                                <field name="user_id" options="{'create':False, 'create_edit':False, 'limit':15}"/>
                            </group>
                            <group>
                                <field name="startingdate"/>
                                <separator colspan="2"/>
                                <field name="deadlinegar"/>
                            </group>
                                <separator colspan="4" string="Description"/>
                                <field colspan="4" name="description" nolabel="1"/>
                        </page>
                        <page string="Additional Information">
                            <separator colspan="4" string="Accounting"/>
                            <field domain="[('name', '=', 'in_invoice')]" name="invoice_id" colspan="2"/>
                            <separator colspan="2"/>
                            <separator colspan="4" string="Safety Instruction"/>
                            <field colspan="4" nolabel="1" name="safety"/>
                        </page>
                        <page string="Spare Parts">
                            <field colspan="4" mode="tree,form" name="product_ids" nolabel="1"/>
                        </page>
                        <page string="Maintenance">
                            <field colspan="4" mode="tree" name="work_order_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="priority"/>
                                    <field name="description"/>
                                    <field name="state"/>
                                    <field name="time"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Help Requests">
                            <field colspan="4" mode="tree" name="help_request_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="priority"/>
                                    <field name="description"/>
                                    <field name="type"/>
                                    <field name="time"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_equipment_list" model="ir.ui.view">
            <field name="name">cmms.equipment.list</field>
            <field name="model">cmms.equipment</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <tree string="Equipment">
                    <field name="name"/>
                    <field name="line_id"/>
                    <field name="user_id"/>
                    <field name="trademark"/>
                    <field name="model"/>
                    <field name="deadlinegar"/>
                </tree>
            </field>
        </record>

        <record id="view_equipment_tree" model="ir.ui.view">
            <field name="name">cmms.equipment.tree</field>
            <field name="model">cmms.equipment</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree string="Equipment">
                    <field name="line_id"/>
                    <field name="name"/>
                    <field name="trademark"/>
                    <field name="model"/>
                    <field name="deadlinegar"/>
                </tree>
            </field>
        </record>

        <record id="open_view_equipment_list" model="ir.actions.act_window">
            <field name="name">Machine</field>
            <field name="res_model">cmms.equipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="open_view_equipment_list_my" model="ir.actions.act_window">
            <field name="name">Machines</field>
            <field name="res_model">cmms.equipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <record id="open_view_equipment_new" model="ir.actions.act_window">
            <field name="name">New Machine</field>
            <field name="res_model">cmms.equipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>

        <!-- 
        ============
        Product Line 
        ============
        -->

        <record id="view_line_form" model="ir.ui.view">
            <field name="name">cmms.line.form</field>
            <field name="model">cmms.line</field>
            <field name="arch" type="xml">
                <form string="Production Line">
                    <field name="name" placeholder="unique id will be generated if blank" colspan="4"/>
                    <field name="location" colspan="4"/>
                    <field name="sequence" colspan="4"/>
                    <field name="line" colspan="4"/>
                    <separator string="Equipment" colspan="4"/>
                    <field name="equipment_ids" colspan="4" nolabel="1" attrs="{'readonly': [('name','=',False)]}"/>
                </form>
            </field>
        </record>
        <record id="view_line_tree" model="ir.ui.view">
            <field name="name">cmms.line.tree</field>
            <field name="model">cmms.line</field>
            <field name="arch" type="xml">
                <tree string="Production line">
                    <field name="line"/>
                    <field name="name"/>
                    <field name="location"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="open_view_line_list_my" model="ir.actions.act_window">
            <field name="name">Production Lines</field>
            <field name="res_model">cmms.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <record id="open_view_line_new" model="ir.actions.act_window">
            <field name="name">New Production Line</field>
            <field name="res_model">cmms.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
        </record>

        <!-- 
        ===============
        Main Menu Items 
        ===============
        -->

        <menuitem
            icon="terp-hr" 
            id="menu_cmms" 
            name="CMMS" 
            groups="group_cmms_user"
           />

        <menuitem
            id="menu_cmms_main"
            name="CMMS"
            parent="menu_cmms"
           />

        <menuitem
           action="open_view_line_list_my"
           id="menu_open_view_line_list_my"
           parent="cmms.menu_cmms_main"
           sequence="10"
           />

        <menuitem
           action="open_view_equipment_list_my"
           id="menu_open_view_equipment_list_my"
           parent="cmms.menu_cmms_main"
           sequence="20"
           />

    </data>
</openerp>
