<openerp>
    <data>

        <record id="view_intervention_form" model="ir.ui.view">
            <field name="name">cmms.intervention.form</field>
            <field name="model">cmms.intervention</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Help request" version="7.0">
                    <group>
                        <field name="description"/>
                    </group>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <field name="equipment_id" />
                            <field name="type"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="user_id" options="{'create':False, 'create_edit':False, 'limit':15}"/>
                            <field name="reference" placeholder="unique id will be generated if blank"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="General information">
                            <group>
                                <group>
                                    <field name="user2_id" options="{'create':False, 'create_edit':False, 'limit':15}"/>
                                    <field name="priority"/>
                                    <field name="time" widget="float_time"/>
                                </group>
                                <group>
                                    <field name="date_inter"/>
                                    <field name="date_end"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field colspan="4" nolabel="1" name="observation"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_intervention_tree" model="ir.ui.view">
            <field name="name">cmms.intervention.tree</field>
            <field name="model">cmms.intervention</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Help Request">
                    <field name="reference" />
                    <field name="priority"/>
                    <field name="description"/>
                    <field name="user_id" />
                    <field name="user2_id"/>
                    <field name="type" />
                    <field name="equipment_id" />
                </tree>
            </field>
        </record>

        <record id="open_view_intervention_list_my" model="ir.actions.act_window">
            <field name="name">Help Requests</field>
            <field name="res_model">cmms.intervention</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
            action="open_view_intervention_list_my" 
            id="menu_open_view_intervention_list_my"
            parent="cmms.menu_cmms_main"
            sequence="70"
            />

    </data>
</openerp>
